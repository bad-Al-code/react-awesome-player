{
  "name": "@badalcodeorg/react-awesome-player",
  "private": false,
  "version": "0.1.1",
  "description": "A modern, feature-rich, and accessible video player for React.",
  "type": "module",
  "main": "./dist/react-awesome-player.umd.cjs",
  "module": "./dist/react-awesome-player.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/react-awesome-player.es.mjs",
      "require": "./dist/react-awesome-player.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "husky"
  },
  "packageManager": "pnpm@10.14.0",
  "peerDependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "peerDependenciesMeta": {
    "@radix-ui/react-tooltip": {
      "optional": true
    },
    "class-variance-authority": {
      "optional": true
    },
    "clsx": {
      "optional": true
    },
    "tailwind-merge": {
      "optional": true
    }
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "hls.js": "^1.6.10",
    "lucide-react": "^0.540.0",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-react": "^5.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "typescript-plugin-css-modules": "^5.2.0",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "react",
    "video",
    "player",
    "hls",
    "typescript",
    "component"
  ],
  "author": "Badal (badalsingh120403@gmail.com)",
  "license": "MIT"
}
